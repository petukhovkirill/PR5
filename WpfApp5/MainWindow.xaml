<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="Меню" Height="400" Width="400">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Content="Божья коровка" Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="150"
                Height="50"
                Click="ShowBug_Click"/>

        <Button Content="Пирамида" Grid.Row="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="150"
        Height="50"
        Click="Pyramid_Click"/>

        <Button Content="График функции" Grid.Row="2"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="150"
        Height="50"
        Click="Graph_Click"/>

        <Button Content="Минёр" Grid.Row="3"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="150"
        Height="50"
        Click="Miner_Click"/>

    </Grid>


</Window>
